#~/.gitconfig
[user]
	name = Fiona Rowan
	email = fiona.rowan@mongodb.com
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[alias]
	co = checkout
	cm = commit
	st = status
	br = branch
	cob = checkout -b
	g = grep
	gi = grep -i
	ls = ls-files
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[grep]
	linenumber = true
