"~/.vimrc
" mouse support in normal mode
set mouse=n

" display and messages
syn on
set number
set wrap 
set linebreak
set breakindent
set showmatch
set showcmd
set ruler

" tabs and indent
set smarttab
set autoindent

" search
set ignorecase
set smartcase
set hlsearch
set incsearch

" editing
set formatoptions+=or
